<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SAT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Google fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700">
    <!-- Icon fonts-->
    <link rel="stylesheet" href="~/Content/css/pe-icon-7-stroke.css">
    <!-- Lightbox CSS-->
    <link rel="stylesheet" href="~/Content/vendor/lightbox2/css/lightbox.min.css">
    <!-- Leaflet CSS-->
    <link rel="stylesheet" href="~/Content/vendor/leaflet/leaflet.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Content/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Content/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <!-- navbar-->
    <header class="header">
        <nav class="navbar navbar-expand-lg py-lg-0">
            <div class="container">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand text-uppercase font-weight-bold">SAT</a>
                <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right small"><span class="text-uppercase mr-2">Menu</span><i class="fas fa-bars"></i></button>
                <div id="navbarSupportedContent" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto d-lg-flex align-items-lg-center">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link font-weight-bold text-uppercase px-lg-3 py-lg-4 active">Home </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a id="navbarDropdownMenuLink" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link font-weight-bold text-uppercase px-lg-3 py-lg-4 dropdown-toggle">Admin</a>
                                <div aria-labelledby="navbarDropdownMenuLink" class="dropdown-menu mt-0"><a href="@Url.Action("Index","Cours")" class="dropdown-item small text-uppercase">Courses</a><a href="@Url.Action("Index","Enrollments")" class="dropdown-item small text-uppercase">Enrollments</a><a href="@Url.Action("Index","ScheduledClasses")" class="dropdown-item small text-uppercase">Scheduled Classes</a><a href="@Url.Action("Index","Students")" class="dropdown-item small text-uppercase">Students</a><a href="@Url.Action("Index","StudentStatus")" class="dropdown-item small text-uppercase">Student Statuses</a></div>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="@Url.Action("Contact", "Home")" class="nav-link font-weight-bold text-uppercase px-lg-3 py-lg-4">Contact </a>
                        </li>
                        <li class="nav-item mt-4 mt-lg-0">
                            <button type="button" data-toggle="modal" data-target="#loginModal" class="btn btn-outline-primary nav-btn btn-sm"> <i style="margin-left: 2.5em" class="fas fa-sign-out-alt mr-2 "></i>@Html.Partial("_LoginPartial")</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()

    <footer style="background: #eee;" class="pt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8 col-md-6 mb-4">
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduler"))
                    {
                        <h5 class="lined lined-dark mb-3">Administrative Links</h5>

                        <ul>

                            <li class="nav-item"><a href="@Url.Action("Index", "RolesAdmin")" class="nav-link">Roles</a></li>
                            <li class="nav-item"><a href="@Url.Action("Index", "UsersAdmin")" class="nav-link">Create</a></li>

                        </ul>
                    }
                </div>


            </div>
        </div>

    </footer>
    <!-- JavaScript files-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/lightbox2/js/lightbox.min.js"></script>
    <script src="~/Content/vendor/leaflet/leaflet.js"></script>
    <script src="~/Content/js/front.js"></script>
    <!-- FontAwesome CSS - loading as last, so it doesn't block rendering-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    @RenderSection("scripts", required: false)
</body>
</html>
@*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@

